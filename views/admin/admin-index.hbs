<section>
  <div class="container"><br>
   
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row" class="index"></th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
          <td><img style="width: 50px; height:50px" src="{{this.image}}" alt=""></td>
          <td>
            <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
            <hr>
            <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</section>

<script>
  let index = document.getElementsByClassName('index');
  for (let i = 0; i < index.length; i++) {
    index[i].innerHTML = i + 1;
  }
</script>